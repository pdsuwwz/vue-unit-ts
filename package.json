{
  "name": "vue-unit-ts",
  "description": "Unit Testing for Vue 3.x + TS",
  "version": "0.0.1",
  "author": "Wisdom <pdsu.wwz@foxmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc --noEmit --skipLibCheck && vite build",
    "preview": "vite preview --host",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.vue",
    "lint:fix": "eslint --fix --cache --ext .js,.ts,.jsx,.tsx,.vue .",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdsuwwz/vue-unit-ts"
  },
  "bugs": {
    "url": "https://github.com/pdsuwwz/vue-unit-ts/issues"
  },
  "dependencies": {
    "vue": "^3.2.36"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@sucrase/jest-plugin": "^2.2.1",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/test-utils": "2.0.2",
    "@vue/vue3-jest": "^28.0.0",
    "babel-jest": "^28.1.0",
    "babel-plugin-transform-vite-meta-env": "^1.0.3",
    "eslint": "^8.17.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-vue": "^9.1.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-transform-stub": "^2.0.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3",
    "vite": "^2.9.9",
    "vue-tsc": "0.38.5"
  }
}
